{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": ".build",
	},
	"include": [
		"./**/*.ts"
	],
	"exclude": [
		"node_modules/**/*",
		"offline/**/*",
		".serverless/**/*",
		".webpack/**/*",
		".build/**/*",
		".coverage/**/*",
		"_warmup/**/*",
		".vscode/**/*",
		"*.config.js",
		"**/*.js"
	]
}
